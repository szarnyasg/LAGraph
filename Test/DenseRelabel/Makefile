# simple Makefile for LAGraph/Test/DenseRelabel/dense_relabel_test

# relies on cmake to do the actual build.  Use the CMAKE_OPTIONS argument to
# this Makefile to pass options to cmake.

# Install LAGraph and GraphBLAS before trying to compile LAGraph.

JOBS ?= 1

# build and run test
default: compile
	./build/dense_relabel_test remap /home/szarnyasg/graphs/example-directed.{v,e}
	./build/dense_relabel_test noremap /home/szarnyasg/graphs/example-directed.{v,e}
	./build/dense_relabel_test remap /home/szarnyasg/graphs/datagen-7_5-fb.{v,e}
	./build/dense_relabel_test noremap /home/szarnyasg/graphs/datagen-7_5-fb.{v,e}

# build test
compile:
	( cd build ; cmake $(CMAKE_OPTIONS) .. ; $(MAKE) --jobs=$(JOBS) )

# just run cmake; do not compile
cmake:
	( cd build ; cmake $(CMAKE_OPTIONS) .. ; )

clean: distclean

purge: distclean

# remove all files not in the distribution
distclean:
	rm -rf build/* stderr.txt

